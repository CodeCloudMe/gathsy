<!DOCTYPE html>
<html>
<head>
  <title>cloudbnb</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header class="group" id="site-header">
    <%= render "header/logo_search_bar" %>
    <%= render "header/login_logout_banner" %>
  </header>

  <% if flash[:errors] || flash[:notices] %>
    <div class="group" id='errors-notices'>
      <%= render "header/flash_errors" %>
      <%= render "header/flash_notices" %>
    </div>
  <% end %>

  <% unless params[:controller] == "root" %>
    <main class="group">
      <%= yield %>
    </main>
  <% else %>
      <%= yield %>
  <% end %>

  <footer>
    <%= yield :scripts %>
  </footer>
</body>
</html>
