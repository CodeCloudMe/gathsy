<section class="group right-sidebar">
  <h1>$<%= @space.booking_rate_daily %></h1>
  <form action="<%= bookings_url %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label>Check in<br>
      <input type="date" name="booking[start_date]">
    </label>

    <label>Check out<br>
      <input type="date" name="booking[end_date]">
    </label>

    <%= select_given_options(label: "Guests",
                             html_name: "booking[guest_count]") %>

    <input type="hidden" name="booking[space_id]" value="<%= @space.id %>">
    <input type="hidden" name="booking[booking_rate_daily]" value="<%= @space.booking_rate_daily %>">

    <button type="submit">Book it</button>

  </form>
</section>